
@model IEnumerable<SweetSpotDiscountGolfPOS.Models.SalesCartCustomer>
    
    <div class="CustomerHeader-elements">
        <label for="CustomerHeaderLabel">Customer Name:</label>
        <input type="text" id="CustomerHeaderText" name="CustomerHeaderText" />
        <button type="button">Change Customer</button>
    </div>
    <div class="CustomerSearchGrid-container">
        <table>
            <thead>
                <tr>
                    <th>Switch Customer</th>
                    <th>Customer Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            <form asp-action="SwitchCustomer" method="post">
                                <input type="hidden" name="CustomerId" value="@customer.intCustomerID" />
                                <button type="submit">Switch</button>
                            </form>
                        </td>
                        <td>@customer.varFirstName @customer.varLastName</td>
                        <td>@customer.varContactNumber</td>
                        <td>@customer.varEmailAddress</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="CustomerSearchFooter">
            <div class="CustomerSearchFooter-column">
                <button type="button">Add New Custoner</button>
            </div>
            <div class="CustomerSearchFooter-column">
                <input type="text" id="CustomerSearchFooterFirstName" name="CustomerSearchFooterFirstName" placeholder="First Name" />
                <input type="text" id="CustomerSearchFooterLastName" name="CustomerSearchFooterLastName" placeholder="Last Name" />
            </div>
            <div class="CustomerSearchFooter-column">
                <input type="text" id="CustomerSearchFooterPhoneNumber" name="CustomerSearchFooterPhoneNumber" placeholder="Phone Number" />
            </div>
            <div class="CustomerSearchFooter-column">
                <input type="text" id="CustomerSearchFooterEmail" name="CustomerSearchFooterEmail" placeholder="Email Address" />
                <input type="checkbox" id="footerCheckbox" name="footerCheckbox" />
                <label for="CustomerSearchFooterCheckbox">Marketing Enrollment</label>
            </div>
        </div>
    </div>