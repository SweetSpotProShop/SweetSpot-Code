@model IEnumerable<SweetSpotDiscountGolfPOS.Models.SalesCartInventory>

<div class="Inventory-container">
    <!-- Top Section -->
    <div class="InventoryTop-section">
        <input type="text" class="form-control" id="SearchInventory" name="SearchInventory" placeholder="Search..."/>
        <button type="button" class="btn btn-primary">Search</button>
    </div>

    <!-- Grid -->
    <div class="Inventory-content">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Add Item</th>
                    <th>Sku</th>
                    <th>In Stock</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Discount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <button type="button" class="btn btn-success">Add</button>
                        </td>
                        <td>@item.varSku</td>
                        <td>
                            <input type="text" class="form-control" placeholder="@item.intQuantity" />
                        </td>
                        <td>@item.varDescription</td>
                        <td>@item.fltPrice</td>
                        <td>
                            <input type="text" class="form-control" placeholder="@item.fltDiscount" />
                            <div>
                                <input type="checkbox" @(item.bitIsDiscountPercent ? "checked" : "") />
                                <label class="form-check-label">Discount by Percent</label>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>